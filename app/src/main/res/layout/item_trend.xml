<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/textview_trend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/trending_padding_end"
        android:paddingStart="@dimen/trend_padding_left"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Name" />


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/textview_trend"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="@dimen/trend_padding_left"
        android:background="@color/grey" />
</RelativeLayout>

